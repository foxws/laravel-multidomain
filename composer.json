{
  "name": "foxws/laravel-multidomain",
  "description": "A Laravel extension for using a Laravel application on a multi domain setting",
  "keywords": [
    "foxws",
    "laravel",
    "laravel-multidomain",
    "livewire-multidomain"
  ],
  "homepage": "https://bitbucket.org/foxws-nl/laravel-multidomain",
  "license": "MIT",
  "authors": [
    {
      "name": "foxws",
      "email": "f.menning@pm.me",
      "role": "Developer"
    }
  ],
  "require": {
    "php": "^8.1",
    "spatie/laravel-package-tools": "^1.9.2",
    "illuminate/contracts": "^9.0",
    "symfony/console": "^6.0"
  },
  "require-dev": {
    "laravel/pint": "^1.0",
    "nunomaduro/collision": "^6.0",
    "nunomaduro/larastan": "^2.0.1",
    "orchestra/testbench": "^7.0",
    "pestphp/pest": "^1.21",
    "pestphp/pest-plugin-laravel": "^1.1",
    "phpstan/extension-installer": "^1.1",
    "phpstan/phpstan-deprecation-rules": "^1.0",
    "phpstan/phpstan-phpunit": "^1.0",
    "phpunit/phpunit": "^9.5",
    "spatie/laravel-ray": "^1.26"
  },
  "autoload": {
    "psr-4": {
      "Foxws\\MultiDomain\\": "src"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Foxws\\MultiDomain\\Tests\\": "tests"
    }
  },
  "scripts": {
    "analyse": "vendor/bin/phpstan analyse",
    "test": "vendor/bin/pest",
    "test-coverage": "vendor/bin/pest --coverage",
    "format": "vendor/bin/pint"
  },
  "config": {
    "sort-packages": true,
    "allow-plugins": {
      "pestphp/pest-plugin": true,
      "phpstan/extension-installer": true
    }
  },
  "extra": {
    "laravel": {
      "providers": [
        "Foxws\\MultiDomain\\MultiDomainServiceProvider"
      ],
      "aliases": {
        "MultiDomain": "Foxws\\MultiDomain\\Facades\\MultiDomain"
      }
    }
  },
  "minimum-stability": "dev",
  "prefer-stable": true
}
